---
interface Props {
	title: string;
	href: string;
	target: string;
}

const { href, title, target } = Astro.props;
---

<div class="button-card">
	<a href={href} target={target}>
		<p>
			{title} <span>  &rarr;</span>
		</p>
	</a>
</div>
<style>
	.button-card {
		width: 10rem;
		height: 1.8rem;
		list-style: none;
		display: flex;
		padding: 0em;
		background-image: none;
		background-size: 400%;
		border-style: solid;
		border-radius: 4px;
		border-width: 1px;
		border-color: #1170ff;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.button-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		border-radius: 4px;
		color: #1170FF;
	}
	p {
		margin: .35rem;
		margin-left: .6rem;
		font-size: .8rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		font-weight: 300;
	}

	.button-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.button-card:is(:hover, :focus-within) p {
		color: #fff;
	}
</style>
