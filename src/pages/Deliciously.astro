---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CaseStudyImageSec from "../components/CaseStudyImageSec.astro";

import { Image } from 'astro:assets';

import D1 from "../images/projectimages/Deliciously/D1.png";
import D2 from "../images/projectimages/Deliciously/D2.png";
import D3 from "../images/projectimages/Deliciously/D3.png";
import D4 from "../images/projectimages/Deliciously/D4.png";
import D5 from "../images/projectimages/Deliciously/D5.png";
---

<Layout title="Nathan Fellows Design: Deliciously">
    <Header></Header>
    <main>
        <div class="start-container">
	        <div class="header-content">
		        <h1 class="title">FROM THE GROUND UP</h1>
		        <div class="subtitle-container"> <p>BRANDING / UX DESIGNER</p> <p>DELICIOUSLY</p></div>
		        <hr class="line">
		        <p class="summary">Deliciously is a recipe app start-up, built for both IOS and Android. Deliciously takes advantage of modern technologies to provide the best experience for both users and content creators.</p>
	        </div>
        </div>
        <div class="container">
	        <div class="content">
                <Image class="replace" src={D1} alt="Nathan Fellows logo"></Image>
                <CaseStudyImageSec tag="1.1 LOGO MARK" summary="The Deliciously logo mark incorporates multiple visual elements into a simplified mark."></CaseStudyImageSec>
	        </div>
        </div>
        <div class="container">
	        <div class="content">
                <Image class="replace" src={D2} alt="Nathan Fellows logo"></Image>
                <CaseStudyImageSec tag="1.2 SET OF MARKS" summary=""></CaseStudyImageSec>
	        </div>
        </div>
        <div class="container">
	        <div class="content">
                <Image class="replace" src={D3} alt="Nathan Fellows logo"></Image>
                <CaseStudyImageSec tag="2.1 MAIN PAGES SCREENS" summary="Designed with daily use in mind. Page layouts include simple shape and color choices leading to a quick and intuitive usage."></CaseStudyImageSec>
	        </div>
        </div>
        <div class="container">
	        <div class="content">
                <Image class="replace" src={D4} alt="Nathan Fellows logo"></Image>
                <CaseStudyImageSec tag="2.2 SHOPPING LIST FLOW SCREENS" summary=""></CaseStudyImageSec>
	        </div>
        </div>
        <div class="container">
	        <div class="content">
                <Image class="replace" src={D5} alt="Nathan Fellows logo"></Image>
                <CaseStudyImageSec tag="3.1 BRANDING ILLUSTRATIONS" summary="Small illustrations used as additional branding elements, which incorporate a singular style and brand colors."></CaseStudyImageSec>
	        </div>
        </div>
    </main>
    <Footer></Footer>
</Layout>
<style>
    main{
        color: #1170ff; 
    }
    .start-container{
		padding-top: 25vh;
	}
    .container{
		padding-top: 1rem;
	}
	.header-content{
		width: 38rem;
		margin-left: auto;
		margin-right: auto;
	}
    .content{
        width: 60vw;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-left: auto;
		margin-right: auto;
    }
	.subtitle-container{
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		font-size: 1.5rem;
	}
	.line{
		border-style: none;
		height: 1px;
		background-color: #1170ff;
	}
	.title{
		font-size: 3.4rem;
		margin-bottom: 1rem;
		text-align: center;
	}
    .sub-title{
		font-size: 2.8rem;
		margin-bottom: 2rem;
		text-align: center;
	}
	.summary{
		font-size: 2rem;
		text-align: center;
		font-weight: 300;
		font-style: italic;
        margin-bottom: 5rem;
	}
    .replace{
        width: 60vw;
        height: auto;
    }
    .image-subtext{
        font-size: 1rem;
        font-weight: 200;
        text-align: center;
        margin-top: 2rem;
    }
    @media only screen and (max-width: 800px) {
        .replace{
        width: 90vw;
        height: auto;
        }
        .content{
        width: 90vw;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-left: auto;
		margin-right: auto;
        }
    }
    }
</style>